 .container {
   height: 100vh;
   text-align: center;
   flex-direction: column;
   justify-content: space-around;
   align-items: center;
 }
.all1
{
  margin-left: 2px;
  margin-right: 2px;
}
 .divLine {
   display: flex;
   flex-direction: column;
   height: 20vh;
   border-top-left-radius: 50px;
   border-top-right-radius: 50px;
   border-top: 5rpx solid #1691f5;
   border-right: 5rpx solid #1691f5;
   border-left: 5rpx solid #1691f5;
   border-bottom: 0rpx solid transparent;
   border-bottom-style: hidden;
   border-image-repeat: stretch;
 }

 .about-banner {
   width: 75rpx;
   height: 75rpx;
   right: 0;
   margin-right: 15px;
   border-radius: 10px;
   border: 5rpx solid #1691f5;
   margin-top: 10px;
 }

 .setting {
   height: 2vh;
   display: flex;
   flex-direction: row;
   align-items: center;
   margin-top: 80rpx;
 }

 .text1 {
   color: rgb(1, 81, 253);
   font-weight: bold;
   font-size: 40rpx;
   text-align: center;
 }

 .title {
   font-weight: 600;
   margin-left: 80rpx;
   margin-right: 100rpx;
   flex: 1;
 }

 .title1 {
   font-weight: 600;
   margin-left: 20rpx;
   margin-right: 100rpx;
   flex: 1;
   font-size: 30rpx;
 }

 .setting1 {
   margin-right: 40rpx;
   height: 15vh;
   display: flex;
   flex-direction: row;
   align-items: center;
 }

 .weui-search-bar__input {
   height: 28px;
   line-height: 28px;
   font-size: 14px;
 }

 .weui-search-bar__form {

   display: flex;
   justify-content: center;
   position: static;
   -webkit-box-flex: 1;
   -webkit-flex: auto;
   flex: auto;
   border-radius: 20px;
   background: #FFFFFF;
   border: 5rpx solid #1691f5;
 }

 .weui-search-bar__box {
   position: relative;
   padding-left: 1px;
   border-color: "blue";
   padding-right: 10px;
   width: 100%;
   box-sizing: border-box;
   z-index: 1;
 }

 .weui-icon-search_in-box {
   position: absolute;
   left: 100px;
   top: 7px;
 }